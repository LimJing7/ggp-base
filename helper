    #Heuristic functions
    
    protected double reward(Role role, MachineState state)
            throws GoalDefinitionException, MoveDefinitionException, TransitionDefinitionException {
    	StateMachine machine = getStateMachine();
    	return findReward(role, state, machine);

    }
    
    protected double keepalive(Role role, MachineState state)
            throws GoalDefinitionException, MoveDefinitionException, TransitionDefinitionException {
    	StateMachine machine = getStateMachine();
    	double reward=findReward(role, state, machine);
    	if (this.findTerminalp(state, machine)) {
    		reward = reward*0.01;
    	}
    	else {
    		reward= reward*10;
    	}
    	return reward;
    }
